<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/deviceConnectedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:text="@string/device_disconnected" />

    <ImageView
        android:id="@+id/deviceConnectionRefresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/deviceConnectedMessage"
        android:layout_alignBottom="@+id/deviceConnectedMessage"
        android:contentDescription="@string/device_connection_refresh"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_connection_refresh" />

    <EditText
        android:id="@+id/initialDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceConnectedMessage"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/form_initial_delay"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/initialDelay"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_interval"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/form_interval_time"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/framesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interval"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_frames_count_down"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/form_frames_count"
        android:inputType="numberDecimal" />

    <ImageView
        android:id="@+id/showImageReviewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/framesCount"
        android:contentDescription="@string/show_last_image_review"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_review_image" />

    <CheckBox
        android:id="@+id/showImageReview"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_below="@id/framesCount"
        android:layout_toRightOf="@id/showImageReviewIcon"
        android:text="@string/show_last_image_review" />

</RelativeLayout>